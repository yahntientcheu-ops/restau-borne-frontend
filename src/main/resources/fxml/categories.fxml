                        <Button maxWidth="1.7976931348623157E308" prefHeight="80.0" styleClass="button-category" text="Rafraîchissements" GridPane.rowIndex="1" />
                        <Button maxWidth="1.7976931348623157E308" prefHeight="80.0" styleClass="button-veg" text="Option Végétarienne" GridPane.rowIndex="2" />
                        <Button styleClass="button-return" text="Retour à l'Accueil" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                    </children>
                    <padding>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                    </padding>
                </GridPane>

                <HBox alignment="CENTER" prefHeight="50.0" styleClass="header-footer">
                    <children>
                        <Label styleClass="subtitle-white" text="L'excellence à chaque bouchée." />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>